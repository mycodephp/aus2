<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Modal Form</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    /* Center the modal vertically and horizontally */
    .modal-dialog {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: 0;
    }
    .modal-content {
        width: 80%;
    }
</style>
</head>
<body>

<!-- Button to Open Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Power Login
</button>

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Enter POWER ID </h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal Body -->
      <div class="modal-body">
        <form id="courseForm" action="redirect.php" method="POST">
          <div class="form-group">
            <label for="courseID">POWER ID:</label>
            <input type="text" class="form-control" id="courseID" name="courseID" placeholder="Enter a number">
            <small id="error" class="text-danger"></small> <!-- Error message -->
          </div>
          <div class="form-group" id="secondInput" style="display:none;">
            <label for="secondField">User Name:</label>
            <input type="text" class="form-control" id="secondField" name="secondField" placeholder="User Name">
          </div>
          <button type="button" id="nextBtn" class="btn btn-primary">Next</button>
          <button type="submit" id="submitBtn" class="btn btn-primary" style="display:none;">Submit</button>
        </form>
      </div>

    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
$(document).ready(function(){
    // Validate the first input field before showing the second input field
    $('#nextBtn').click(function(){
        var courseID = $('#courseID').val();
        if(courseID=="8cjBejlTcnmaDiI") {
            $('#error').text('');
            $('#secondInput').show();
            $('#nextBtn').hide();
            $('#submitBtn').show();
        } else {
            $('#error').text('Please enter a valid number.');
        }
    });
});
</script>

</body>
</html>
